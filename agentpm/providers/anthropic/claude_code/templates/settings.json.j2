{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-tool-use.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.py"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory",
  "project": {
    "name": "{{ project.name }}",
    "description": "{{ project.description or 'APM (Agent Project Manager) managed project' }}"
  },
  "generated": {
    "timestamp": "{{ generation_time }}",
    "template": "settings.json.j2",
    "generator": "ClaudeCodeGenerator"
  }
}
