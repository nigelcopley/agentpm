#!/usr/bin/env python3
"""Update all imports from agentpm to agentpm"""

import os
import re
from pathlib import Path

def update_file(filepath):
    """Update imports in a single file"""
    try:
        with open(filepath, 'r', encoding='utf-8') as f:
            content = f.read()

        original = content

        # Replace imports
        content = re.sub(r'\bfrom agentpm\b', 'from agentpm', content)
        content = re.sub(r'\bimport agentpm\b', 'import agentpm', content)
        content = re.sub(r'\bagentpm\.', 'agentpm.', content)

        if content != original:
            with open(filepath, 'w', encoding='utf-8') as f:
                f.write(content)
            return True
    except Exception as e:
        print(f"Error processing {filepath}: {e}")
    return False

def main():
    """Update all Python files"""
    root = Path('/Users/nigelcopley/Projects/AgentPM')
    updated = 0

    # Update Python files
    for py_file in root.rglob('*.py'):
        if '.venv' in str(py_file) or 'htmlcov' in str(py_file):
            continue
        if update_file(py_file):
            updated += 1
            print(f"✓ Updated: {py_file.relative_to(root)}")

    print(f"\n✓ Updated {updated} files")

if __name__ == '__main__':
    main()
