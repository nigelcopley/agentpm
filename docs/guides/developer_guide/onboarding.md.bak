```python
def test_create_work_item_success(db_service, project):
    """Test successful work item creation"""
    # Arrange
    wi = WorkItem(
        project_id=project.id,
        name="Test Work Item",
        type=WorkItemType.FEATURE,
        status=WorkItemStatus.DRAFT,
        acceptance_criteria=["AC1", "AC2", "AC3"],
