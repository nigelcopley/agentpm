CREATE TABLE document_references (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    project_id INTEGER NOT NULL,

    -- Polymorphic relationship
    entity_type TEXT NOT NULL CHECK(entity_type IN ('work_item', 'task', 'idea')),
