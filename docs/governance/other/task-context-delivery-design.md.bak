    def _get_core_hierarchy(self, task_id: int):
        """Optimized: 1 query with JOIN"""
        query = """
            SELECT
                t.*,
                w.id as wi_id, w.name as wi_name, w.type as wi_type,
                w.description as wi_description, w.business_context,
